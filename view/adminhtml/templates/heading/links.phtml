<?php
/** @var \Magento\Backend\Block\Template $block */

$links = $block->getData('links') ?: [];
?>

<?php foreach ($links as $text => $url) {
    if (!$text || !$url) {
        continue;
    } ?>
    <small style="margin-left: 15px;">
        <a class="btn" target="_blank" href="<?php echo $block->escapeUrl($url); ?>"><?php echo $block->escapeHtml($text); ?></a>
    </small>
<?php } ?>
