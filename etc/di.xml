<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Add the CLI commands -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="event_log_finish_digest_command" xsi:type="object">
                    Ryvon\EventLog\Console\Command\FinishDigestCommand
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Add the placeholders to the placeholder replacer -->
    <type name="Ryvon\EventLog\Helper\PlaceholderReplacer">
        <arguments>
            <argument name="placeholders" xsi:type="array">
                <item name="attribute" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\AttributePlaceholder
                </item>
                <item name="attribute-set" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\AttributeSetPlaceholder
                </item>
                <item name="category" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\CategoryPlaceholder
                </item>
                <item name="cms-page" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\CmsPagePlaceholder
                </item>
                <item name="cms-block" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\CmsBlockPlaceholder
                </item>
                <item name="config-section" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\ConfigSectionPlaceholder
                </item>
                <item name="customer" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\CustomerPlaceholder
                </item>
                <item name="order" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\OrderPlaceholder
                </item>
                <item name="product" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\ProductPlaceholder
                </item>
                <item name="user-ip" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\UserIpPlaceholder
                </item>
                <item name="user-name" xsi:type="object">
                    Ryvon\EventLog\Helper\Placeholder\UserNamePlaceholder
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Add the groups to the group finder -->
    <type name="Ryvon\EventLog\Helper\GroupFinder">
        <arguments>
            <argument name="groups" xsi:type="array">
                <item name="admin" xsi:type="string">Ryvon\EventLog\Helper\Group\AdminGroup</item>
                <item name="cleanup" xsi:type="string">Ryvon\EventLog\Helper\Group\CleanupGroup</item>
                <item name="orders" xsi:type="string">Ryvon\EventLog\Helper\Group\OrdersGroup</item>
            </argument>
        </arguments>
    </type>

    <!-- Add the action observers to the monitor plugin. -->
    <type name="Ryvon\EventLog\Plugin\ActionMonitorPlugin">
        <arguments>
            <argument name="monitors" xsi:type="array">
                <item name="adminhtml_system_config_save" xsi:type="object">
                    Ryvon\EventLog\Observer\Action\SystemConfigSaveObserver
                </item>
            </argument>
        </arguments>
    </type>

    <!-- This is needed for the email send to not fail when sending through the CLI -->
    <type name="Magento\Developer\Model\TemplateEngine\Plugin\DebugHints">
        <arguments>
            <argument name="debugHintsPath" xsi:type="string">dev/debug/template_hints_storefront</argument>
        </arguments>
    </type>

    <!-- Add a plugin to hook into the action dispatch event -->
    <type name="Magento\Backend\App\AbstractAction">
        <plugin name="event_log_action_monitor" type="Ryvon\EventLog\Plugin\ActionMonitorPlugin" sortOrder="1"/>
    </type>

    <!-- Add some plugins to hook into their save events -->
    <type name="Magento\Catalog\Model\ResourceModel\Attribute">
        <plugin name="event_log_attribute_plugin" type="Ryvon\EventLog\Plugin\AttributePlugin" sortOrder="1"/>
    </type>
    <type name="Magento\Eav\Model\ResourceModel\Entity\Attribute\Set">
        <plugin name="event_log_attribute_set_plugin" type="Ryvon\EventLog\Plugin\AttributeSetPlugin"
                sortOrder="1"/>
    </type>
</config>
